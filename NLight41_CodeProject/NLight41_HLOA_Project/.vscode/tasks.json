{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O2", // Optimization flag
                "-std=c++17", // Specify the C++ standard
                "${workspaceFolder}/src/main.cpp",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/HLOA/v0.1.1/include", // Include HLOA v0.1.1 headers
                "-I/C/toolbox/CppAD-master/include/cppad",
                "-I/C/toolbox/Eigen-3.4.0/Eigen",
                "-o",
                "${workspaceFolder}/bin/main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}